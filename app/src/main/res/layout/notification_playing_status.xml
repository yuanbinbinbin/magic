<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/id_notification_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/music_default_img" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/id_notification_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/id_notification_author"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:text="name"
            android:textColor="#fff"
            android:textSize="13sp" 
          />

        <TextView
            android:id="@+id/id_notification_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_notification_name"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="author"
            android:textSize="10sp"
            android:focusable="true" 
            android:focusableInTouchMode="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/id_notification_last"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/id_notification_pause"
            android:src="@drawable/activity_notification_last" />

        <ImageView
            android:id="@+id/id_notification_pause"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/id_notification_next"
            android:src="@drawable/activity_notification_pause" />

        <ImageView
            android:id="@+id/id_notification_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/id_notification_close"
            android:src="@drawable/activity_notification_next" />

        <ImageView
            android:id="@+id/id_notification_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/activity_notification_close" />
    </RelativeLayout>

</LinearLayout>